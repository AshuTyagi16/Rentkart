<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <include layout="@layout/toolbar_signup" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.sasuke.rentkart.customfonts.MyTextView_Montserrat_Alternates_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="RENTKART"
                android:textColor="#666666"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <com.sasuke.rentkart.customfonts.EditText_Roboto_Regular
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="35dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="29dp"
                    android:background="@drawable/signeup_ciruclarrectangle"
                    android:hint="Name"
                    android:maxLines="1"
                    android:paddingBottom="15dp"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/stringcolor"
                    android:textSize="15sp" />

                <com.sasuke.rentkart.customfonts.EditText_Roboto_Regular
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/signeup_ciruclarrectangle"
                    android:hint="Username"
                    android:maxLines="1"
                    android:paddingBottom="15dp"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/stringcolor"
                    android:textSize="15sp" />

                <com.sasuke.rentkart.customfonts.EditText_Roboto_Regular
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/signeup_ciruclarrectangle"
                    android:hint="Email ID"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingBottom="15dp"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/stringcolor"
                    android:textSize="15sp" />

                <com.sasuke.rentkart.customfonts.EditText_Roboto_Regular
                    android:id="@+id/et_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/signeup_ciruclarrectangle"
                    android:hint="Phone number"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:paddingBottom="15dp"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/stringcolor"
                    android:textSize="15sp" />

                <com.sasuke.rentkart.customfonts.EditText_Roboto_Regular
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/signeup_ciruclarrectangle"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingBottom="15dp"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/stringcolor"
                    android:textSize="15sp" />

                <com.sasuke.rentkart.customfonts.EditText_Roboto_Regular
                    android:id="@+id/et_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/signeup_ciruclarrectangle"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingBottom="15dp"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/stringcolor"
                    android:textSize="15sp" />
            </LinearLayout>

            <com.sasuke.rentkart.customfonts.MyTextView_Roboto_Medium
                android:id="@+id/tv_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_form"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/signeup_ciruclarrectangleblue"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="Signup"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>